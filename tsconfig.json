{
    "compilerOptions": {
        "allowJs": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2016",
            "es2017.object"
        ],
        "moduleResolution": "node",
        "module": "amd",
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules"
    ]
}